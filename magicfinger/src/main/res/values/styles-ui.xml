<resources>

    <style name="HomeBottomText">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dip</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dip</item>
        <item name="android:background">@drawable/selector_home_buttom</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HorizontalDividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0dp</item>
        <item name="android:background">#e0e0e0</item>
    </style>

    <style name="ViewListItem">
        <item name="android:minHeight">@dimen/list_item_minHeight</item>
        <item name="android:paddingLeft">@dimen/list_item_paddingLeft</item>
        <item name="android:paddingRight">@dimen/list_item_paddingRight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/selector_item_text</item>
    </style>
</resources>
